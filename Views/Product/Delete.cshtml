@model WebApplication1.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<div class="card border-danger">
    <div class="card-header bg-danger text-white">
        Are you sure you want to delete this product?
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Product</dt>
            <dd class="col-sm-9">@Model.product_name</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.product_desc</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.product_price.ToString("F2")</dd>

            <dt class="col-sm-3">Created</dt>
            <dd class="col-sm-9">@Model.createdDate.ToString("yyyy-MM-dd HH:mm:ss")</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="product_id" />
            <div class="mt-3">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
