@model WebApplication1.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<div class="card border-warning">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="product_id" />

            <div class="mb-3">
                <label asp-for="product_name" class="form-label"></label>
                <input asp-for="product_name" class="form-control" />
                <span asp-validation-for="product_name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="product_desc" class="form-label"></label>
                <textarea asp-for="product_desc" class="form-control" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label asp-for="product_price" class="form-label"></label>
                <input asp-for="product_price" class="form-control" />
                <span asp-validation-for="product_price" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-warning">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
